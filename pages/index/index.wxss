.top_menu_list{
	width: 100%;
	height: 40px;
	line-height: 38px;
	background: #fff;
	overflow:hidden;
	 display: flex; 
	 position: relative; 
	 z-index: 2; 
	 flex-direction:row; 
	 align-items:center;
	 padding: 0 0 10px;
}
.top_menu_list .btn{
	margin: 0 10px; 
	padding: 0 4px; 
	font-size: 14px;
	min-width: 80px;
	text-align: center;
}
.top_menu_list .btn.active{
	color: #f00;
	border-bottom: 1px solid #f00;
}
.scroll-con{
	overflow:hidden;
}
.news_item{
	padding:10px 10px 0;
	clear: both;
}
.img_holder{
	width: 33.33%;
	display:inline-block;
	padding: 0 10px 0 0;
	box-sizing: border-box;
}
.img_holder image{
	width: 100%;
	height: 80px;
}
.des{
	float: left;
	width: 66.67%;
}
.title{
	font-size: 16px;
	color: #666;
	width: 100%;
	line-height: 26px;
	padding: 0 0 10px;
}
.group-image{
	clear: both;
}
.news-source{
	color: #f00;
	font-size: 12px;
}